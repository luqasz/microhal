{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "warnings": {
        "deprecated": true
      },
      "errors": {
        "deprecated": true
      },
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "avr-gcc",
      "inherits": [
        "default"
      ],
      "hidden": true,
      "toolchainFile": "../cmake/toolchain/avr-gcc.cmake"
    },
    {
      "name": "release-avr",
      "displayName": "Default AVR release config",
      "inherits": [
        "avr-gcc"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "release-avr",
      "configurePreset": "release-avr"
    }
  ]
}